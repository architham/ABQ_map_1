var map;

var parkswitch = true;
var openspaceswitch = false;
var publicartswitch = false;
var bikepathswitch = true;
var citylimitswitch = false;
var transitroutesswitch = true;

$(document).ready(function () {
           
                var mapOptions = {
                    center: new google.maps.LatLng(35.10, -106.57),
                    zoom: 14,
                    mapTypeId: google.maps.MapTypeId.ROADMAP
                    };
                map = new google.maps.Map(document.getElementById("map_canvas"),
                        mapOptions);
                    
                var parkLayer = new google.maps.KmlLayer('http://data.cabq.gov/community/parksandrec/parks/CityParks.kmz');
                var openspaceLayer = new google.maps.KmlLayer('http://data.cabq.gov/community/openspace/CityOpenSpace.kmz');
                var publicartLayer = new google.maps.KmlLayer('http://data.cabq.gov/community/art/publicart/PublicArt.kmz');
                var bikepathLayer = new google.maps.KmlLayer('http://data.cabq.gov/community/bikepaths/BikePaths.kmz');
                var citylimitLayer = new google.maps.KmlLayer('http://data.cabq.gov/government/citylimits/abqcitylimits.kmz');
                var transitroutesLayer = new google.maps.KmlLayer('http://data.cabq.gov/transit/routesandstops/transitroutes.kmz');
                   
                if (parkswitch) {
                      parkLayer.setMap(map);
                      }
                      else {
                      parkLayer.setMap(null);
                      }
                if (openspaceswitch) {
                      openspaceLayer.setMap(map);
                      }
                      else {
                      openspaceLayer.setMap(null);
                      }
                 if (publicartswitch) {
                      publicartLayer.setMap(map);
                      }
                      else {
                      publicartLayer.setMap(null);
                      }
                  if (bikepathswitch) {
                      bikepathLayer.setMap(map);
                      }
                      else {
                      bikepathLayer.setMap(null);
                      }
                  if (citylimitswitch) {
                      citylimitLayer.setMap(map);
                      }
                      else {
                      citylimitLayer.setMap(null);
                      }
                   if (transitroutesswitch) {
                      transitroutesLayer.setMap(map);
                      }
                      else {
                      transitroutesLayer.setMap(null);
                      }
                               
});

